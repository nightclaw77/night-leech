# ═══════════════════════════════════════════════════════════════
# 🗂️ FILE LIMITS
# ═══════════════════════════════════════════════════════════════

# حداکثر حجم فایل برای آپلود (بایت)
# 2097152000 = ~2GB (محدودیت تلگرام بدون پریمیوم)
MAX_FILE_SIZE = "2097152000"

# پسوندهای مستثنی (با فاصله جدا کنید)
EXCLUDED_EXTENSIONS = ""

# ═══════════════════════════════════════════════════════════════
# 🔍 SEARCH SETTINGS (اختیاری)
# ═══════════════════════════════════════════════════════════════

# فعال‌سازی جستجوی تورنت
TORRENT_SEARCH_ENABLED = "False"

# ═══════════════════════════════════════════════════════════════
# 🔄 RSS SETTINGS (اختیاری)
# ═══════════════════════════════════════════════════════════════

RSS_ENABLED = "False"

# ═══════════════════════════════════════════════════════════════
# ⚡ PERFORMANCE
# ═══════════════════════════════════════════════════════════════

# تعداد عملیات همزمان
MAX_CONCURRENT_DOWNLOADS = "3"

# استفاده از Aria2c (True) یا qBittorrent (False)
USE_ARIA2 = "True"

