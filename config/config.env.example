# ═══════════════════════════════════════════════════════════════
# 📱 TELEGRAM SETTINGS (ضروری - باید پر شود)
# ═══════════════════════════════════════════════════════════════

# توکن ربات از @BotFather
BOT_TOKEN = "YOUR_BOT_TOKEN_HERE"

# آی‌دی تلگرام شما (عددی، نه یوزرنیم)
# ارسال /id به @userinfobot برای دریافت
OWNER_ID = "YOUR_TELEGRAM_ID_HERE"

# API Credentials از my.telegram.org
TELEGRAM_API = "YOUR_API_ID_HERE"
TELEGRAM_HASH = "YOUR_API_HASH_HERE"

# ═══════════════════════════════════════════════════════════════
# ☁️ UPLOAD SETTINGS (آپلود به تلگرام)
# ═══════════════════════════════════════════════════════════════

# tg = Telegram (پیش‌فرض و توصیه شده)
# gd = Google Drive (نیاز به تنظیمات اضافه)
# rc = Rclone (نیاز به تنظیمات rclone.conf)
DEFAULT_UPLOAD = "tg"

# مسیر پوشه دانلود موقت
DOWNLOAD_DIR = "/opt/night-leech/downloads"

# ═══════════════════════════════════════════════════════════════
# 📊 BOT SETTINGS
# ═══════════════════════════════════════════════════════════════

# فاصله زمانی بروزرسانی وضعیت (ثانیه)
STATUS_UPDATE_INTERVAL = "10"

# حداکثر تعداد تسک در وضعیت
STATUS_LIMIT = "4"

# حذف خودکار پیام‌ها پس از X ثانیه (0 = غیرفعال)
AUTO_DELETE_MESSAGE_DURATION = "60"

# ═══════════════════════════════════════════════════════════════
# 🔐 USER SETTINGS (کاربران مجاز)
# ═=====════════════════════════════════════════════════════════=

# آی‌دی سوپرگروه/کانال برای لاگ (اختیاری)
LOG_CHANNEL_ID = ""

# کاربران سودو (با فاصله جدا کنید)
SUDO_USERS = ""

# کاربران مجاز (با فاصله جدا کنید)
AUTHORIZED_CHATS = ""

# ═══════════════════════════════════════════════════════════════
